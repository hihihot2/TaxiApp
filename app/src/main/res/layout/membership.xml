<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25">
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">
        <EditText
            android:layout_gravity="center"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "Join"
            android:gravity="center"
            android:textSize = "30sp"/>

        <!--ID입력 구간..........................................................................-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
            <EditText
                android:id="@+id/getId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="ID"
                android:gravity="center"
                android:singleLine="true"
                android:inputType="text"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/search1"
                android:text="중복검사"
                android:textSize="13dp"
                android:textColor="#ff9000"
                android:clickable="true"
                android:layout_weight="2"></TextView>
        </LinearLayout>

        <!--pw입력 구간..........................................................................-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
            <EditText
                android:id="@+id/getPw2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="비밀번호"
                android:gravity="center"
                android:singleLine="true"
                android:inputType="textPassword"
                android:password="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"></TextView>
        </LinearLayout>

        <!--pw재입력 구간..........................................................................-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
            <EditText
                android:id="@+id/getPw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="비밀번호 재입력"
                android:gravity="center"
                android:singleLine="true"
                android:inputType="textPassword"
                android:password="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"></TextView>
        </LinearLayout>

        <!--name입력 구간..........................................................................-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
            <EditText
                android:id="@+id/getName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="이름"
                android:gravity="center"
                android:singleLine="true"
                android:inputType="text"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"></TextView>
        </LinearLayout>

        <!--grade number입력 구간................................................................-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
            <EditText
                android:id="@+id/getGrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="학번"
                android:gravity="center"
                android:singleLine="true"
                android:inputType="number"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/search2"
                android:text="중복검사"
                android:textSize="13dp"
                android:textColor="#ff9000"
                android:clickable="true"
                android:layout_weight="2"></TextView>
        </LinearLayout>

        <!--전화번호 입력 구간...................................................................-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
            <EditText
                android:id="@+id/getPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="전화번호"
                android:gravity="center"
                android:singleLine="true"
                android:inputType="phone"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"></TextView>
        </LinearLayout>

        <!--소속대학 입력 구간...................................................................-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                />
            <Spinner
                android:id="@+id/getCollege"
                android:layout_width="105dp"
                android:layout_height="50dp"

                android:gravity="center"/>
            <Spinner
                android:id="@+id/getMajor"
                android:layout_width="105dp"
                android:layout_height="50dp"

                android:gravity="center"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>



    </LinearLayout>

    <!--가입 버튼 입력 구간......................................................................-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <Button
            android:id="@+id/Join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="가입하기"
            android:gravity="center"
            android:background="#ffffff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"></TextView>
    </LinearLayout>

    <!--취소 버튼 입력 구간......................................................................-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <Button
            android:id="@+id/Join_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="돌아가기"
            android:gravity="center"
            android:background="#ffffff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25">
    </LinearLayout>

</LinearLayout>